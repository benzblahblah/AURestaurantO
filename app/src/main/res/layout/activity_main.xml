<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aus15"
    tools:context="benznatthakul.au_restaurant_o.MainActivity">

    <Button
        android:id="@+id/btnLoginFacebook"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/regTxt"
        android:layout_alignStart="@+id/btnLoginEmail"
        android:layout_marginBottom="25dp"
        android:background="#3c66c4"
        android:text="Sign In with Facebook"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textColorLink="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLoginEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLoginFacebook"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textColorLink="@color/white"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/emailTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordTxt"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/com_facebook_button_background_color_focused"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/passwordTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLoginEmail"
        android:layout_alignStart="@+id/emailTxt"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/com_facebook_button_login_silver_background_color_pressed"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/regTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/emailTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        app:srcCompat="@drawable/aurestaurant_ic_launcher" />

</RelativeLayout>